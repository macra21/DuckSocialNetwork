<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.org.ddd.ui.user.LoginController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../../css/login.css">
    <center>
        <VBox styleClass="vbox">
            <children>
                <Label id="titleLabel" text="Login" />
                <TextField fx:id="emailField" promptText="Enter your email"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password"/>
                <Label fx:id="errorMessageLabel" text="" />
                <HBox alignment="CENTER" spacing="100.0">
                    <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
                    <Button fx:id="registerButton" onAction="#handleRegister" text="Go to Register" />
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
