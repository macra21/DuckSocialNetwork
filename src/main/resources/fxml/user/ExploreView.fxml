<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.org.ddd.ui.user.ExploreController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../../css/explore.css">
    <center>
        <VBox alignment="CENTER" spacing="15.0" prefWidth="250.0">
            <padding>
                <Insets top="15.0" bottom="15.0" left="15.0" right="15.0"/>
            </padding>
            <Label text="Find Users" alignment="CENTER"/>
            <ListView fx:id="allUsersListView" />
            <Button fx:id="sendFriendRequestButton" text="Send Friend Request" onAction="#handleSendFriendRequest" disable="true"/>
        </VBox>
    </center>
</BorderPane>
