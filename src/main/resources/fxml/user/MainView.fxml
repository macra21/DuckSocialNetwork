<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.org.ddd.ui.user.MainController">
    <left>
        <VBox spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Duck Social" />
            <Label fx:id="usernameLabel" style="-fx-text-fill: #666666;" text="Logged in as..." />
            
            <Separator />
            
            <Button maxWidth="Infinity" onAction="#handleShowMessages" text="Messages" />
            <Button maxWidth="Infinity" onAction="#handleShowFriendships" text="Friendships" />
            <Button maxWidth="Infinity" onAction="#handleShowGroups" text="Groups" />
            <Button maxWidth="Infinity" onAction="#handleShowEvents" text="Events" />
            
            <Separator />
            
            <Button maxWidth="Infinity" onAction="#handleLogout" style="-fx-text-fill: red;" text="Logout" />
        </VBox>
    </left>
    
    <center>
        <!-- Content will be loaded here dynamically -->
        <VBox alignment="CENTER">
            <Label style="-fx-font-size: 20px; -fx-text-fill: #999999;" text="Welcome to Duck Social Network!" />
            <Label text="Select an option from the menu to get started." />
        </VBox>
    </center>
</BorderPane>
